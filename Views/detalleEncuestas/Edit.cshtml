@model Encuestas.detalleEncuestas
@using System.Web.Mvc

@{
    ViewBag.Title = "Edit";
}

<h2>Editar pregunta de la encuesta</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idDetalleEncuesta)

        <div class="form-group">
            <label class="control-label col-md-2">Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreCampo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreCampo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Titulo Mostrado</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.titulo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.titulo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Es Requerido?</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.esRequerido)
                    @Html.ValidationMessageFor(model => model.esRequerido, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tipo</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.tipoCampo, new List<SelectListItem>
                            {
                        new SelectListItem { Text = "Texto", Value = "Texto" },
                        new SelectListItem { Text = "Numero", Value = "Numero" },
                        new SelectListItem { Text = "Fecha", Value = "Fecha" }
                    }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tipoCampo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { id = 0 })
</div>
